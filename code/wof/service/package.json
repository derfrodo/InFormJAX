{
  "name": "service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc",
    "generateGql": "graphql-codegen",
    "start": "npm run compile && node ./dist/index.js",
    "dev:watch": "nodemon --exec npm run dev",
    "compile:watch": "nodemon --exec npm run compile",
    "dev": "tsc --project ./tsconfig.json --noEmit && node --es-module-specifier-resolution=node --no-warnings=ExperimentalWarning --loader=ts-node/esm ./src/index.mts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "delay": "1500",
    "ext": "ts,mts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@graphql-tools/schema": "^10.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/graphql-modules-preset": "^4.0.6",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@types/node": "^20.11.28",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.2"
  },
  "description": ""
}
